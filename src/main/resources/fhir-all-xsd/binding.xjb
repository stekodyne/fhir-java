<jxb:bindings xmlns:jxb="http://java.sun.com/xml/ns/jaxb"
          xmlns:xs="http://www.w3.org/2001/XMLSchema"
          version="2.1">

    <jxb:bindings schemaLocation="fhir-xhtml.xsd" version="1.0.2">
        <jxb:bindings node="//xs:attributeGroup[@name='i18n']">
            <jxb:bindings node=".//xs:attribute[@name='lang']">
                <jxb:property name="language" />
            </jxb:bindings>
        </jxb:bindings>

        <jxb:bindings node="//xs:element[@name='bdo']">
            <jxb:bindings node=".//xs:attribute[@name='lang']">
                <jxb:property name="language" />
            </jxb:bindings>
        </jxb:bindings>
    </jxb:bindings>

</jxb:bindings>